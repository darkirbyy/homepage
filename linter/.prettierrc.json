{
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "arrowParens": "always",
  "plugins": ["@zackad/prettier-plugin-twig", "@prettier/plugin-php"],
  "overrides": [
    {
      "files": ["../src/**/*.php", "../tests/**/*.php"],
      "options": {
        "parser": "php",
        "tabWidth": 4,
        "printWidth": 180,
        "singleQuote": true,
        "phpVersion": "8.0",
        "braceStyle": "psr-2"
      }
    },
    {
      "files": "../templates/**/*.twig",
      "options": {
        "printWidth": 180,
        "twigAlwaysBreakObjects": false,
        "trailingComma": "all",
        "tabWidth": 2,
        "singleQuote": false,
        "semi": false
      }
    },
    {
      "files": "../assets/controllers/**/*.js",
      "options": {
        "parser": "babel",
        "printWidth": 80,
        "tabWidth": 2,
        "semi": true,
        "singleQuote": true
      }
    },
    {
      "files": "../assets/styles/**/*.scss",
      "options": {
        "parser": "scss",
        "printWidth": 80,
        "tabWidth": 2,
        "singleQuote": true,
        "bracketSpacing": false
      }
    }
  ]
}
